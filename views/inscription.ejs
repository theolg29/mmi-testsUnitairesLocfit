<%- include('header'); -%>

    <div class="space">

    </div>

    <div class="banner">
        <h2>inscription</h2>
    </div>
    <div class="formulaireCentre">
        <div class="formcontainer">
            <form id="registrationForm" action="/inscription" method="post">
                <div class="form-group">
                    <label for="name">Nom :</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="name">Prénom :</label>
                    <input type="text" id="name" name="surname" required>
                </div>

                <div class="form-group">
                    <label for="email">Email :</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="birthdate">Date de naissance :</label>
                    <input type="date" id="birthdate" name="ddn" required>
                </div>

                <div class="form-group">
                    <input type="checkbox" id="age-confirmation" name="age-confirmation" required>
                    <label for="age-confirmation">Je confirme avoir plus de 18 ans</label>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="password" required>
                </div>

                <div class="form-group">
                    <button class="btninscription" type="submit">S'inscrire</button>
                </div>
            </form>

            <p id="error-message" class="error"></p>
            <div class="form-group">
                <p>Déjà un compte ? <a href="/connexion">Se connecter</a></p>
            </div>
    

        </div>
    </div>

    

    <%- include('footer'); -%>