  <style>
    .btn {
      border-color: #d0a705;
      color: #FFFFFF;
      padding: 15px 30px;
      border: none;
      border-radius: 12px;

      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      border-color: #c1a225;
    }

    .btn:focus {
      outline: 3px solid #FFD700;
      /* Bordure pour focus accessible */
    }

    /* Cartes de contenu */
    .card {
      background-color: #FFFFFF;
      border-radius: 12px;
      padding: 25px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      margin: 20px;
    }

    .card h2 {
      font-size: 22px;
      margin-bottom: 15px;
    }

    .card p {
      font-size: 18px;
      color: #666666;
    }



    .produit-lien {
      color: #ffffff;
      text-decoration: none;
      font-size: 18px;

    }

    .produit-lien:hover,
    .produit-lien:focus {
      outline: none;
    }

    /* Espacement pour les éléments */
    .container {
      max-width: 1200px;
      margin: auto;
      padding: 20px;
    }

    /* Accessibilité des formulaires */
    input,
    textarea {
      width: 100%;
      padding: 15px;
      margin-top: 10px;
      border: 1px solid #CCCCCC;
      border-radius: 8px;
    }

    input:focus,
    textarea:focus {
      border-color: #d0a705;
      outline: none;
    }
    .nav-index2.scrolled ul li a {
      color: black; /* Change la couleur du texte en noir */
    }
    
    .nav-index2.scrolled #mainLOCFIT {
      color: black;
    }
    nav.nav-index2.scrolled  {
      background-color: #D9D9D9; 
      transition: background-color 0.5s ease; 
    }
    
    
  </style>
  <script>
    window.addEventListener("scroll", function() {
      const nav = document.querySelector(".nav-index2");
      const banner = document.querySelector(".banner");
      const bannerPosition = banner.offsetTop;
  
      if (window.scrollY >= bannerPosition) {
        nav.classList.add("scrolled");
      } else {
        nav.classList.remove("scrolled");
      }
    });
  </script>
  

